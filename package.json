{
  "name": "bsv-desktop-electron",
  "version": "0.8.7",
  "description": "BSV Desktop Wallet - Electron Edition",
  "main": "dist-electron/main.js",
  "type": "module",
  "author": "BSV Association <support@bsvassociation.org>",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json && cp electron/storage-loader.cjs electron/updater.cjs dist-electron/ && electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.electron.json && cp electron/storage-loader.cjs electron/updater.cjs dist-electron/",
    "icons": "bash scripts/generate-icons.sh",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "lint:ci": "echo 'No linting'",
    "test": "echo 'No tests'"
  },
  "dependencies": {
    "@bsv/amountinator": "^0.2.12",
    "@bsv/identity-react": "^1.1.9",
    "@bsv/message-box-client": "^1.4.0",
    "@bsv/sdk": "^1.8.2",
    "@bsv/uhrp-react": "^1.0.4",
    "@bsv/wallet-toolbox": "^1.6.26",
    "@bsv/wallet-toolbox-client": "^1.6.26",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.8",
    "@mui/material": "^6.4.8",
    "@mui/styles": "^6.4.8",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "express": "^4.21.2",
    "fuse.js": "^7.1.0",
    "iso-3166-ts": "^2.2.0",
    "jdenticon": "^3.3.0",
    "knex": "^3.1.0",
    "libphonenumber-js": "^1.12.23",
    "metanet-apps": "^1.0.6",
    "node-fetch": "^3.3.2",
    "node-forge": "^1.3.1",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^5.2.0",
    "react-toastify": "^11.0.5",
    "use-async-effect": "^2.2.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.13.1",
    "@types/node-fetch": "^2.6.13",
    "@types/node-forge": "^1.3.14",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "typescript": "~5.6.2",
    "vite": "^6.3.6",
    "vite-plugin-electron": "^0.29.0"
  },
  "build": {
    "appId": "com.bsvblockchain.bsvdesktop",
    "productName": "BSV-Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "bsv-blockchain",
      "repo": "bsv-desktop"
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Finance",
      "icon": "build/icon.png"
    }
  }
}
